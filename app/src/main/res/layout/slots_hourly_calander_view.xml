<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeSlotTv"
        android:padding="@dimen/_4sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Am"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        ></androidx.appcompat.widget.AppCompatTextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSlotIndicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="@+id/timeSlotTv"
        app:layout_constraintBottom_toBottomOf="@+id/timeSlotTv"
        app:layout_constraintLeft_toRightOf="@+id/timeSlotTv"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/slotBookedTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/slot_booked"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatTextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/viewTwo"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintLeft_toRightOf="@+id/timeSlotTv"
        app:layout_constraintTop_toBottomOf="@+id/timeSlotTv"
        android:background="@color/grayColor">
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>