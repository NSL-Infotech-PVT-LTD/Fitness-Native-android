<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_4sdp"
    android:padding="@dimen/_4sdp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/recycler_serviceNameTv"
                android:layout_width="wrap_content"
                app:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/service_name"
                android:textColor="@color/colorBlack"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_dollarsign"
                app:layout_constraintRight_toLeftOf="@id/recycler_PriceEdt"
                app:layout_constraintTop_toTopOf="@id/recycler_PriceEdt"
                app:layout_constraintBottom_toBottomOf="@id/recycler_PriceEdt"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/dollar_sign_image_design"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/recycler_PriceEdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/enter_price"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/card_input_edt_background"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_5sdp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorLightGray"
                app:layout_constraintLeft_toLeftOf="@id/recycler_serviceNameTv"
                app:layout_constraintRight_toRightOf="@id/recycler_PriceEdt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1"
                android:paddingBottom="@dimen/_10sdp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>