<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:paddingBottom="@dimen/_14sdp"
        android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/coachImageContainer"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/coachImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sophie" />
    </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/supplierName"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Roger David"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@+id/coachImageContainer"
            app:layout_constraintTop_toBottomOf="@+id/coachImageContainer" />

        <RatingBar
            android:id="@+id/supplierRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:numStars="5"
            android:progressBackgroundTint="@color/colorLightGray"
            android:progressTint="@color/colorGreen"
            android:rating="3"
            android:stepSize="1"
            app:layout_constraintStart_toStartOf="@+id/supplierName"
            app:layout_constraintTop_toBottomOf="@+id/supplierName" />

    </androidx.constraintlayout.widget.ConstraintLayout>