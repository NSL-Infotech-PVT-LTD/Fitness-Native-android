<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable GPS"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="80dp"/>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="270dp"
        android:layout_height="270dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.6"
        android:background="@color/colorWhite"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_enableGPS"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Do you want to enable the GPS?"
                android:textSize="18dp"
                android:textColor="#000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"/>


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMaterial_FourthScreen"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_enableGPS"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:thumb="@drawable/switch_design_latest"
                app:track="@drawable/switchtrack"
                />
            <TextView
                android:id="@+id/tv_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="@id/switchMaterial_FourthScreen"
                app:layout_constraintLeft_toLeftOf="@id/switchMaterial_FourthScreen"
                app:layout_constraintRight_toRightOf="@id/switchMaterial_FourthScreen"
                app:layout_constraintBottom_toBottomOf="@id/switchMaterial_FourthScreen"
                android:layout_marginLeft="40sp"/>
            <TextView
                android:id="@+id/tv_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ON"
                android:textColor="#000"
                android:visibility="gone"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="@id/switchMaterial_FourthScreen"
                app:layout_constraintLeft_toLeftOf="@id/switchMaterial_FourthScreen"
                app:layout_constraintRight_toRightOf="@id/switchMaterial_FourthScreen"
                app:layout_constraintBottom_toBottomOf="@id/switchMaterial_FourthScreen"
                android:layout_marginRight="60dp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_material_screenFourth"
                android:layout_width="200dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Save"
                android:gravity="center"
                android:textColor="#000"
                android:backgroundTint="#00fa9a"
                android:layout_marginBottom="30dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>>

    <View
        android:id="@+id/viewFourthScreen"
        android:layout_width="150sp"
        android:layout_height="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1dp"
        android:background="@drawable/view_design"/>

</androidx.constraintlayout.widget.ConstraintLayout>