<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_forgetPassword_sixthScreen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:text="Forget Password"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_EnterPassword_sixthScreen"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="150dp"
        android:background="@drawable/etmaterial_design"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="@dimen/_10sdp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="10dp"
        android:text="     "
        android:textColor="#000"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_forgetPassword_sixthScreen"

        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_confirmPassword_sixthScreen"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/etmaterial_design"
        android:drawableLeft="@drawable/ic_lock"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="10dp"
        android:text="     "
        android:textColor="#000"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_EnterPassword_sixthScreen"

        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_material_SixthScreen"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#00fa9a"
        android:gravity="center"
        android:text="Submit"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_confirmPassword_sixthScreen" />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40sp"
        android:text="Go back"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/viewSixthScreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/viewSixthScreen"
        android:layout_width="150sp"
        android:layout_height="10dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/view_design"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>