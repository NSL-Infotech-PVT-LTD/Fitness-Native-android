<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back">



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_header_FifthScreen"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Find your coach"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70sp"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_Signup_FifthScreen"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_header_FifthScreen"
        />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_enterName_FifthScreen"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:text="     "
        android:padding="10dp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/etmaterial_design"
        android:drawableLeft="@drawable/ic_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Signup_FifthScreen"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40sp"/>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_enterEmail_FifthScreen"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:text="     "
        android:textColor="#000"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/etmaterial_design"
        android:drawableLeft="@drawable/ic_lock"
        app:layout_constraintTop_toBottomOf="@id/et_enterName_FifthScreen"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="40sp"
        />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_enterPhone_FifthScreen"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:text="     "
        android:textColor="#000"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/etmaterial_design"
        android:drawableLeft="@drawable/ic_lock"
        app:layout_constraintTop_toBottomOf="@id/et_enterEmail_FifthScreen"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="10dp"
        />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_EnterPassword_Fifthscreen"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:padding="10dp"
        android:text="     "
        android:inputType="textPassword"
        android:maxLines="1"
        android:background="@drawable/etmaterial_design"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/et_enterPhone_FifthScreen"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="10dp"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_material_FifthScreen"
        android:layout_width="270dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_EnterPassword_Fifthscreen"
        android:text="Save"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#000"
        android:backgroundTint="#00fa9a"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log In"
        android:textSize="15sp"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@id/viewFifthScreen"
        android:layout_marginBottom="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/viewFifthScreen"
        android:layout_width="150sp"
        android:layout_height="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1dp"
        android:background="@drawable/view_design"/>

</androidx.constraintlayout.widget.ConstraintLayout>