<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_signup_eighthScreen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_EnterName_EighthScreen"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:padding="10dp"
        android:text="     "
        android:inputType="textPassword"
        android:maxLines="1"
        android:background="@drawable/etmaterial_design"
        android:drawableLeft="@drawable/ic_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_eighthScreen"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="150dp"

        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_enterPassword_eighthScreen"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:padding="10dp"
        android:text="     "
        android:inputType="textPassword"
        android:maxLines="1"
        android:background="@drawable/etmaterial_design"
        android:drawableLeft="@drawable/ic_lock"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_EnterName_EighthScreen"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="15sp"

        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_material_eighthScreen"
        android:layout_width="270dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_enterPassword_eighthScreen"
        android:text="Sign Up"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#000"
        android:backgroundTint="#00fa9a"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign In"
        android:textSize="15sp"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@id/vieweighthScreen"
        android:layout_marginBottom="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/vieweighthScreen"
        android:layout_width="150sp"
        android:layout_height="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1dp"
        android:background="@drawable/view_design"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>