<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9ffe3"
    tools:context=".activities.OfferSpaceActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/createTrainingSessionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/offer_space"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/createEventImg"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:src="@drawable/ic_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/create_event_dummytxt"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createTrainingSessionTv" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/card_shape_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/Guideline">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/_30sdp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/_30sdp" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/OfficeSpaceLocationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/location"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="@dimen/_20sdp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/offerSpaceLocationSpinner"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:spinnerMode="dropdown"
            app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
            app:layout_constraintRight_toRightOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/OfficeSpaceLocationTv" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/card_input_edt_background"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="@dimen/_12sdp"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintBottom_toBottomOf="@id/offerSpaceLocationSpinner"
            app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
            app:layout_constraintRight_toRightOf="@id/rightGuideline"
            app:layout_constraintTop_toTopOf="@id/offerSpaceLocationSpinner" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/offerSpaceStartbsnshourTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/start_business_hour"

            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@id/offerSpaceLocationSpinner" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/offerSpaceEndbsnshourTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/end_business_hour"

            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintRight_toRightOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/offerSpaceLocationSpinner" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/offerSpaceSelectStartbsnsHourTv"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/card_input_edt_background"
            android:drawableLeft="@drawable/ic_time"
            android:gravity="center"
            android:hint="@string/start_time"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@id/offerSpaceStartbsnshourTv" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/offerSpaceSelectEndbsnsHourTv"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/card_input_edt_background"
            android:drawableLeft="@drawable/ic_time"
            android:gravity="center"
            android:hint="@string/end_time"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintRight_toRightOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/offerSpaceStartbsnshourTv" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/offerSpaceSelectDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/select_date"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@id/offerSpaceSelectStartbsnsHourTv" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/offerSpaceEnterDateTv"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/card_input_edt_background"
            android:drawableRight="@drawable/ic_date"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
            app:layout_constraintRight_toRightOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/offerSpaceSelectDateTv" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/offerSpaceCostTv"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/card_input_edt_background"
            android:drawableRight="@drawable/ic_dollarsign"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/_80sdp"
            android:text="@string/cost"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
            app:layout_constraintRight_toRightOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/offerSpaceEnterDateTv" />

        <View
            android:id="@+id/offerspaceCostView"
            android:layout_width="1dp"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginLeft="@dimen/_100sdp"
            android:background="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/offerSpaceCostTv"
            app:layout_constraintLeft_toLeftOf="@id/offerSpaceCostTv"
            app:layout_constraintRight_toRightOf="@id/offerSpaceCostTv"
            app:layout_constraintTop_toTopOf="@id/offerSpaceCostTv" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/offerSpaceEnterCostEdt"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:hint="10"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@id/offerSpaceCostTv"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@id/offerspaceCostView"
            app:layout_constraintRight_toRightOf="@id/rightGuideline"
            app:layout_constraintTop_toTopOf="@id/offerSpaceCostTv" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/offerSpaceUploadTv"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/card_input_edt_background"
            android:drawableRight="@drawable/ic_file_upload"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/_10sdp"
            android:text="@string/upload_photos"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
            app:layout_constraintRight_toRightOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/offerSpaceEnterCostEdt" />


        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/colorGreen"
            android:fontFamily="@font/poppins_semibold"
            android:text="Post"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
            app:layout_constraintRight_toRightOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/offerSpaceUploadTv"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>