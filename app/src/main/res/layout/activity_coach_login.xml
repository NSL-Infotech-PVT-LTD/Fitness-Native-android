<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_header_ThirdScreen"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Find your coach"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70sp"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_LogIn_ThirdScreen"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_header_ThirdScreen"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_EnterName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="#000"
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/etmaterial_design"
            android:drawableLeft="@drawable/ic_profile_type"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_Or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        app:layout_constraintTop_toBottomOf="@id/et_EnterName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_facebook"
        android:layout_width="270dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_Or"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:textSize="15sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="10dp"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="15sp"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@id/tv_SignUp"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have an account? Sign Up"
        android:textSize="15sp"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@id/viewThirdScreen"
        android:layout_marginBottom="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/viewThirdScreen"
        android:layout_width="150sp"
        android:layout_height="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1dp"
        android:background="@drawable/view_design"/>


</androidx.constraintlayout.widget.ConstraintLayout>