<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_SelectServiceTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:background="@color/colorGreen"
        android:backgroundTint="@color/colorGreen"
        android:text="Select Services"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_16sdp"
        app:fontFamily="@font/poppins_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_RecyclerView"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_SelectServiceTv" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_btnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:backgroundTint="@color/colorGreen"
        android:text="@string/apply"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        app:cornerRadius="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_RecyclerView"
        app:strokeColor="@color/colorGreen"
        app:strokeWidth="@dimen/_1sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_14sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>