<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DiscoverTopRated">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/discoverHeaderTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/discover"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/discoverBackArrowImg"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/exploreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_38sdp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/explore_coaches_discover"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discoverHeaderTv" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/discoverCircleImg"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:src="@drawable/sophie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/discoverSearchEdt"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:drawableLeft="@drawable/magnifier"
        android:elevation="@dimen/_3sdp"
        android:gravity="center"
        android:hint="@string/search_keyword"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_70sdp"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exploreTv" />


    <TextView
        android:id="@+id/discoverSearchTv"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/round_background_colord"
        app:layout_constraintLeft_toRightOf="@id/discoverSearchEdt"
        app:layout_constraintTop_toBottomOf="@id/exploreTv" />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/magnifier"
        app:layout_constraintBottom_toBottomOf="@+id/discoverSearchTv"
        app:layout_constraintLeft_toLeftOf="@+id/discoverSearchTv"
        app:layout_constraintRight_toRightOf="@+id/discoverSearchTv"
        app:layout_constraintTop_toTopOf="@+id/discoverSearchTv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topRateRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_30sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discoverSearchEdt" />

    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/ic_common_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/discoverSearchTv"
        android:layout_marginTop="@dimen/_40sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>