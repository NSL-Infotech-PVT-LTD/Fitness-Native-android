<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_3sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/message_RoundImg"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/sophie"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/message_name_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rihana"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintLeft_toRightOf="@id/message_RoundImg"
        app:layout_constraintTop_toTopOf="@id/message_RoundImg"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/message_desc_Tv"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/description"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@id/message_RoundImg"
        app:layout_constraintTop_toBottomOf="@id/message_name_Tv"

        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@color/colorAccent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/_25sdp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_25sdp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/just_now"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintLeft_toRightOf="@id/message_desc_Tv"
        app:layout_constraintTop_toBottomOf="@id/message_name_Tv"
        android:layout_marginLeft="@dimen/_38sdp"/>

    <View
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_2sdp"
        app:layout_constraintLeft_toLeftOf="@id/message_desc_Tv"
        app:layout_constraintTop_toBottomOf="@id/message_desc_Tv"
        android:layout_marginTop="@dimen/_20sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>