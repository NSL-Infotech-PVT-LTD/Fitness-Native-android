<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_1sdp"
    app:layout_constraintTop_toBottomOf="@+id/dateLayout"
    android:layout_marginTop="@dimen/_20sdp"
    android:background="@color/lightGrayFont"></View>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateLayout"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@drawable/card_input_edt_background"
        app:layout_constraintTop_toBottomOf="@+id/selectNumServicText">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableLeft="@drawable/ic_icon_cal_dialog"
        android:fontFamily="@font/poppins_regular"
        android:paddingRight="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"

        android:text="@string/selecte_date_of_service">

    </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/_6sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_chevron_end"></androidx.appcompat.widget.AppCompatImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:visibility="gone"
        app:layout_goneMarginTop="@dimen/_10sdp"
        android:id="@+id/selectTimeSlotText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:gravity="center"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableLeft="@drawable/ic_time_slot"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_10sdp"
        android:text="@string/select_time_slot_you_want_service">
    </androidx.appcompat.widget.AppCompatTextView>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/constraintChipGroup"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:theme="@style/ChipTheme"
        app:chipIconEnabled="false"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTimeSlotText" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/editTimeLaout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintChipGroup">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/changeTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableLeft="@drawable/ic_time"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12sdp"
            android:paddingRight="@dimen/_20sdp"
            android:text="@string/change_time_range">

        </androidx.appcompat.widget.AppCompatTextView>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/createEventStartTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/start_hour"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/changeTimeTv" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/createEventEndTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/end_hour"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintLeft_toLeftOf="@+id/endHour"
            app:layout_constraintTop_toBottomOf="@+id/changeTimeTv" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/startHour"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/card_input_edt_background"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="left|center_vertical"
            android:hint="@string/start_time"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/createEventStartTimeTv" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/endHour"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/card_input_edt_background"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="left|center_vertical"
            android:hint="@string/end_time"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/createEventEndTimeTv"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkGreens"
        android:padding="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/totlaPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:padding="@dimen/_6sdp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>