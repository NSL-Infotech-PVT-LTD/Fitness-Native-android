<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SelectTimeSlot">

   <androidx.appcompat.widget.AppCompatImageView
       android:id="@+id/closeSlotDialog"
       android:layout_width="@dimen/_30sdp"
       android:layout_height="@dimen/_30sdp"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginTop="@dimen/_10sdp"
       android:layout_marginRight="@dimen/_10sdp"
       app:layout_constraintTop_toTopOf="parent"
       android:background="@drawable/ic_back"
       ></androidx.appcompat.widget.AppCompatImageView>
    <ScrollView
        android:id="@+id/editTimeScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@+id/closeSlotDialog"
        app:layout_constraintBottom_toTopOf="@+id/bottomConstraint">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/closeSlotDialog"
        app:layout_constraintBottom_toTopOf="@+id/bottomConstraint">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/calanderImg"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/ic_calendar_space_two"
        ></androidx.appcompat.widget.AppCompatImageView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selectDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calanderImg"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/colorGreen"
        android:text="@string/select_date_time">

    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selectNumServicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectDateText"
        android:gravity="center"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableLeft="@drawable/ic_icon_cal_dialog"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_12sdp"
        android:paddingRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="@string/select_date_for_space_booking">

    </androidx.appcompat.widget.AppCompatTextView>

